# API Anthropic (Claude)
ANTHROPIC_API_KEY=

# Claude Model Configuration
# Max output tokens for Claude Sonnet 4.6 is 64000
CLAUDE_MODEL=claude-sonnet-4-6
CLAUDE_MAX_INPUT_TOKENS=200000
CLAUDE_MAX_OUTPUT_TOKENS=64000
# Adaptive thinking: "adaptive" (recommended for Sonnet 4.6) or "disabled"
CLAUDE_THINKING_TYPE=adaptive
# Effort level for adaptive thinking: "low", "medium", "high" (max is Opus 4.6 only)
# Sonnet 4.6 recommendation: set explicitly to avoid unexpected latency
CLAUDE_EFFORT=low
# When true, backend disables thinking only for structured outputs.
# Keep false to preserve thinking even with structured outputs.
CLAUDE_DISABLE_THINKING_FOR_STRUCTURED_OUTPUT=false
# Timeout for Anthropic requests (ms). Prevents long pending -> generic 500.
CLAUDE_REQUEST_TIMEOUT_MS=500000

# Porta do servidor
PORT=3400

# Banco SQLite
DATABASE_PATH=./data/personal-trainer.sqlite

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5174

# Rate Limiting
RATE_LIMIT_GLOBAL_MAX=60
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_CLAUDE_MAX=10

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=
